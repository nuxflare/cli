{
  "name": "nuxflare",
  "version": "0.3.3",
  "description": "Deploy your Nuxt app to Cloudflare.",
  "main": "dist/index.js",
  "bin": {
    "nuxflare": "dist/index.js"
  },
  "scripts": {
    "compile": "tsc -b",
    "build": "rm -rf dist && pnpm compile && chmod +x dist/index.js && cp -r src/init dist/init",
    "dev": "tsc -w",
    "prepare": "pnpm build",
    "release": "release-it"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "chalk": "^5.4.1",
    "commander": "^13.1.0",
    "dotenv": "^16.4.7",
    "liquidjs": "^10.21.0",
    "open": "^10.1.0",
    "terminal-link": "^3.0.0",
    "update-notifier": "^7.3.1"
  },
  "type": "module",
  "devDependencies": {
    "@cloudflare/workers-types": "4.20250224.0",
    "@types/inquirer": "^8.2.10",
    "@types/node": "^20.10.5",
    "@types/update-notifier": "^6.0.8",
    "release-it": "^18.1.2",
    "typescript": "^5.3.3"
  },
  "keywords": [],
  "author": "Tanay Karnik",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    }
  }
}
